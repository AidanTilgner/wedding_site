---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home">home</Layout>

<style lang="scss">
  .hero {
    height: 100vh;
    position: relative;

    &__image {
      height: 100%;
      width: 100%;
      object-fit: cover;
      filter: brightness(0.6);
      // the image should always show the top of the image
      object-position: top;
    }

    &__text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -75%);
      color: white;
      font-size: 48px;
      font-weight: 400;
      font-family: "Dancing Script", cursive;
      text-align: center;
      width: 80%;
    }

    &__buttons {
      position: absolute;
      bottom: 20%;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 16px;
    }
  }
</style>
