---
import Layout from "../../layouts/Layout.astro";
import SeatingChart from "../../components/SeatingChart/SeatingChart";
---

<Layout title="Seating Chart">
  <main>
    <div class="title">
      <h2>Seating Chart</h2>
      <p>Please find your table below :)</p>
    </div>
    <div class="chart">
      <SeatingChart client:load />
    </div>
  </main>
</Layout>

<style lang="scss">
  main {
    padding-block: 82px;
    padding-inline: 36px;

    p {
      font-size: 18px;
      color: rgba($color: #000000, $alpha: 0.6);
    }
  }
  .title {
    margin-bottom: 56px;

    h2 {
      font-size: 36px;
      font-weight: 400;
    }
    p {
      font-size: 18px;
      font-weight: 400;
      color: rgba($color: #000000, $alpha: 0.6);
    }
  }
</style>
