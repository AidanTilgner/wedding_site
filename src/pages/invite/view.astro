---
import Layout from "../../layouts/Layout.astro";
import YourInvite from "../../components/Invite";
---

<Layout title="Your Invite" lowkey={true}>
  <main>
    <div class="invite">
      <YourInvite client:load step={1} />
    </div>
  </main>
</Layout>

<style lang="scss">
  main {
    height: 100vh;
    padding-block: 82px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    --text-color: #000;
    background-color: #fff;

    @media (min-width: 768px) {
      padding-block-start: 156px;
    }
  }

  .invite {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
  }
</style>
